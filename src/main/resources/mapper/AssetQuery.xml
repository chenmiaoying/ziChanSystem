<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cmy.dao.AssetQuery">
    <select id="queryAll" resultType="com.cmy.pojo.Asset">
        SELECT * FROM asset_info
    </select>
    <select id="getQueryBy" parameterType="hashmap" resultType="com.cmy.pojo.Asset">
        select * from asset_info
        where 1=1
            <if test="params.asset_name != null">
                and asset_name=#{params.asset_name}
            </if>
            <if test="params.asset_type != null">
                and asset_host=#{params.asset_type}
            </if>
            <if test="params.asset_back != null">
                and asser_back=#{params.asset_back}
            </if>
            <if test="params.asset_user !=null">
                and asset_user=#{params.asset_user}
            </if>

    </select>
</mapper>